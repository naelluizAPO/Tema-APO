<div class="halo-sidebar halo-sidebar-left halo-sidebar_search" id="search-form-mobile">
    <a href="#" class="halo-sidebar-close" data-search-close-sidebar alt="{{ 'general.common.close' | t }}">
        {% render 'icon-close' %}
        {{ 'general.common.close' | t }}
    </a>
    <div class="halo-sidebar-header text-left">
		<span class="title">
			{{ 'general.search.search' | t }}
		</span>
	</div>
    <div class="halo-sidebar-wrapper custom-scrollbar">
        {% if settings.header_layout == '02' or settings.header_layout == '03' or settings.header_layout == '04' or settings.header_layout == '05' or settings.header_layout == '06' or settings.header_layout == '07' or settings.header_layout == '08' %}
            <details class="search_details">
                <summary class="header__search-full" aria-haspopup="dialog" aria-label="{{ 'general.search.search' | t }}">
                    <a href="javascript:void(0)" class="header-search-close" alt="{{ 'general.common.close' | t }}">
                        {% render 'icon-close' %}
                        {{ 'general.common.close' | t }}
                    </a>
                    <form action="{{ routes.search_url }}" method="get" role="search" class="search search-modal__form">
                        <div class="field">
                            <input class="search__input field__input form-input-placeholder" id="Search-In-Modal" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.search_product' | t }}" autocomplete="off">
                            <input type="hidden" name="options[prefix]" value="last">
                            <label class="field__label hiddenLabels" for="Search-In-Modal">
                                {{ 'general.search.search' | t }}
                            </label>
                            <button class="button search__button field__button focus-inset" aria-label="{{ 'general.search.search' | t }}">
                                {% render 'icon-search' %}
                            </button>
                        </div>
                    </form>
                </summary>

                <div class="search-modal modal__content{% if settings.show_quick_search %} quickSearch{% endif %}" role="dialog" aria-modal="true" aria-label="{{ 'general.search.search' | t }}">
                    {%- if settings.show_quick_search -%}
                        {% render 'halo-quick-search' %}
                    {%- endif -%}
                </div>
            </details>
        {% endif %}
    </div>
</div>